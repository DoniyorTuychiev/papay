<%- include ('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/menu.css"/>
<link rel="stylesheet" type="text/css" href="/css/login.css"/>
<link rel="stylesheet" type="text/css" href="/css/home.css" />




<body>
    <div id="main_container">
        <div class="group_name">
            <ul class="nav justify-content-center"> 
                <li class="nav-item" style="cursor: pointer">
                  <a class="nav-link active" href="/resto">Home</a>
                </li> 
                    <li class="nav-item" style="cursor: pointer">
                    <a class="nav-link" href="/resto/all-restaurant">AllResto</a>
                </li>
                <li class="nav-item" style="cursor: pointer">
                    <a class="nav-link" href="/resto/logout">Logout</a>
                </li>
            </ul>
        </div>

        <div class="restaurant_menu_frame">
            <div class="restaurant_container"></div>
            <div class="resto_table">
                <span class="new_dish_txt">
                    Barcha Restaurantlar royxati
             </span>

             <table class="table table-hover table-sm">
                <thead class="thead-light">
                    <tr class="thead-light">
                        <th scope="col">T/r</th>
                        <th scope="col">Restaurant Nomi</th>
                        <th scope="col">Restaurant Telefon Raqami</th>
                        <th scope="col">Restaurant TOP</th>
                        <th scope="col">Taom Holati</th>
                    </tr>
                </thead>
                <% restaurants_data.map(function(value, key){ %>
                    <tbody style="background: white;">
                        <td><%= key + 1 %></td> <!--array noldan boshlangani uchun +1 yozildi yani 1-indexdan oqigin deb -->
                        <td><%= value.mb_nick %></td>
                        <td><%= value.mb_phone %></td>
                        <td style="width: 13%;">
                        <label class="switch">
                            <input type="checkbox" class="mb_top" id="<%= value._id%>"
                            <%= value.mb_top === 'Y' ? 'checked' : ''%>/>
                            <span class="slider round"></span>
                        </label></td>
                        <td style="width: 13%;">
                            <select class="spec_select mb_status" >
                                   <option value="ONPAUSE" <%= value.product_status === 'ONPAUSE' ? 'selected' : '' %> >ONPAUSE</option>
                                   <option value="ACTIVE" <%= value.product_status === 'ACTIVE' ? 'selected' : '' %> >ACTIVE</option>
                                   <option value="DELETED" <%= value.product_status === 'DELETED' ? 'selected' : '' %> >DELETED</option>
                            </select>
                        </td>
                    </tbody>
                <% }) %>
            </div>
        </div>
    </div>
    <script>
        $(function() {
            $(".mb_top").on('change', function(e) {
                const id = e.target.id;
                const mb_top = e.target.checked ? 'Y' : 'N';
                // console.log(`${id} va ${mb_top}`);

                axios.post( '/resto/all-restaurants/edit', {id: id, mb_top: mb_top})
                .then(response => {
                    const result = response.data;
                    if(result.state === 'success') {
                        alert('successfuly updated');
                    }
                    // console.log(result);
                    else{
                        alert(result.message);
                    }  
                })
                .catch(err => console.log(err));

            });
        });
    </script>
</body>

<%- include ('includes/footer') %>