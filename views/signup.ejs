<%- include ('includes/header') %>

<link rel="stylesheet" type="text/css" href="/css/login.css">

<body>
        <form 
        class="login_container" 
        action="/resto/sign-up"
        method="POST"
        enctype="multipart/form-data"
        >
         <!-- enctype="multipart/form-data" => formga image ham qoshaman degani agar bu yozilmasa ishlamaydi -->
        <div class="login_frame"  style=" width: 650px; height: 750px">

                <div class="login_top">
                        <span>Royxatdan otish</span>
                        <div>
                                Bosh sahifaga qaytish <a href="/resto" style="color: blueviolet;">Home</a>
                        </div>
                        <p>Royxattdan allaqachon otganmishiz?
                                <a href="/resto/login" style="color: blueviolet">Login</a>
                        </p>
                </div>

                <div class="sign_input_frame">
                        <div class="sign_up_frame">
                                <label>Foydalanuvchi ismi</label>
                                <input 
                                type="text"
                                name="mb_nick" 
                                placeholder="Foydalanuvchining ismi"
                                value=""
                                required
                                />
                        </div>
                        <div class="sign_up_frame">
                                <label>Telefon raqam</label>
                                <input 
                                type="text"
                                name="mb_phone" 
                                placeholder="Telefon raqam"
                                value=""
                                required
                                />
                        </div>
                </div>
                <div class="sign_input_frame">
                        <div class="sign_up_frame">
                                <label>Password</label>
                                <input 
                                type="text"
                                name="mb_password" 
                                placeholder="passwordni kiriting"
                                value=""
                                required
                                />
                        </div>
                        <div class="sign_up_frame">
                                <label>Passwordni qayta kiriting</label>
                                <input 
                                type="password"
                                name="mb_password" 
                                placeholder="passwordni tastiqlash"
                                value=""
                                required
                                />
                        </div>
                </div>
                <div class="login_input_frame">
                        <div class="media_frame">
                                <img class="upload_img_frame" src="/images/default_resto.jpg"/>
                                <div class="upload_container">
                                        <span class="media_text">Taom rasmi</span>
                                        <div class="filebox ms3-primary preview image">
                                           <input 
                                             class="upload-name"
                                             value="Rasmni tanlang"
                                             disabled="disabled"
                                           />
                                           <label>Rasmni yuklash</label>
                                           <input 
                                             type="file"
                                             name="input_file"
                                             name="restaurant_img" 
                                             placeholder="passwordni tastiqlash"
                                             class="upload-hidden form-control-file restaurant_img"
                                             />
                                        </div>
                                        <p class="thumbnail_desc">Oshxona rasmingizni bu yerga yuklang:  <br>Muhim korsatmalar: .jpg, .jpeg, .png. <br>Rasmda matn bolmasligi kerak!</p>
                                </div>
                        </div>
                </div>

                <button class="login_btn btn" name="signup" type="submit">Royxatdan otish</button>

        </div>
</form>
</body>
<%- include ('includes/footer') %>

